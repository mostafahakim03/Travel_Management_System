<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="FlightAnchor" prefHeight="530.0" prefWidth="683.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.travel_managment_system.travel_managment_system.FlightController">
   <children>
      <ToolBar layoutX="-15.0" nodeOrientation="RIGHT_TO_LEFT" prefHeight="40.0" prefWidth="708.0" style="-fx-background-color: #ffae00; -fx-padding: 5px;">
         <items>
            <Button mnemonicParsing="false" onAction="#logoutButtonClicked" style="-fx-background-color: #ffae00; -fx-padding: 12px;" text="Logout" />
            <Button mnemonicParsing="false" onAction="#CProfileClicked" style="-fx-background-color: #ffae00; -fx-padding: 12px;" text="My Profile" />
            <Button mnemonicParsing="false" onAction="#myTripsClicked" style="-fx-background-color: #ffae00; -fx-padding: 12px;" text="My Trips" />
            <Button fx:id="HomeButton" mnemonicParsing="false" onAction="#HomeClicked" style="-fx-background-color: #ffae00; -fx-padding: 12px;" text="Home" />
         </items>
      </ToolBar>
      <ImageView fx:id="Flightview" fitHeight="637.0" fitWidth="168.0" layoutX="263.0" layoutY="-64.0" pickOnBounds="true" preserveRatio="true" style="-fx-rotate: 90;">
         <image>
            <Image url="@./flight.png" />
         </image>
      </ImageView>
      <Label alignment="CENTER" layoutX="49.0" layoutY="82.0" prefHeight="46.0" prefWidth="163.0" text="Egypt Air" textFill="#ffae00">
         <font>
            <Font name="System Bold Italic" size="30.0" />
         </font>
      </Label>
      <Button fx:id="Nextbtn" layoutX="569.0" layoutY="448.0" mnemonicParsing="false" onAction="#Next" prefHeight="42.0" prefWidth="91.0" style="-fx-background-color: #ffae00; -fx-background-radius: 45;" text="Next" textFill="WHITE" visible="false">
         <font>
            <Font size="18.0" />
         </font>
      </Button>
      <AnchorPane fx:id="AddAnchor" layoutX="-1.0" layoutY="360.0" prefHeight="79.0" prefWidth="696.0">
         <children>
            <Button layoutX="462.0" layoutY="13.0" mnemonicParsing="false" onAction="#addSeatNumber" prefHeight="24.0" prefWidth="78.0" style="-fx-background-color: #ffae00; -fx-background-radius: 45;" text="Add" textFill="WHITE">
               <font>
                  <Font size="18.0" />
               </font>
            </Button>
            <ComboBox fx:id="Select_seat" layoutX="285.0" layoutY="17.0" nodeOrientation="LEFT_TO_RIGHT" prefHeight="32.0" prefWidth="126.0" promptText="Seat Number" style="-fx-background-radius: 45; -fx-border-color: #ffae00; -fx-border-radius: 45;" />
            <Label alignment="CENTER" layoutX="46.0" layoutY="7.0" prefHeight="51.0" prefWidth="230.0" text="Enter your seat number :" textFill="#ffae00">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Label>
            <Label fx:id="alertText" layoutX="58.0" layoutY="49.0" text="You must select your seat number." visible="false" />
         </children>
      </AnchorPane>
   </children>
</AnchorPane>
